{
	DDRA=0XFF;
	PORTA=0XFF; 
	DDRB  = 0x6C;  
	PORTB = 0x93; 
	DDRC=0XFF;
	PORTC=0XFF;
	DDRD=0XFF;
	PORTD=0XFF;  
}

