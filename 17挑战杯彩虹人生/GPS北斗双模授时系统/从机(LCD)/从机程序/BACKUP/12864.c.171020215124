  
 
 
 #include "12864.h"
 
 uchar flag_lcd_start = 0;    //LCD扫描标志位
 
 /*********lcd端口初始化函数**********/
 void lcd_port_init(void)
 {
 	DDRA |= (1<<PA0)|(1<<PA1)|(1<<PA2)|(1<<PA3)|(1<<PA4);
	PORTA |= (1<<PA0)|(1<<PA1)|(1<<PA2)|(1<<PA3)|(1<<PA4);;
 }
 
 /**********显示坐标显示函数*********/
 void lcd_xy(uchar y, uchar x)
 {
    if(y == 0) lcd_write_com(0x80+x);
	else if(y == 1) lcd_write_com(0x90+x);
	else if(y == 2) lcd_write_com(0x88+x);
	else if(y == 3) lcd_write_com(0x98+x);
 }
 
 /***********发送1字节函数***********/
 void lcd_send_byte(uchar data)
 {
    uchar i;
	for(i=0; i<8; i++)
	{
		if(data&0x80)
		   RW_1;
		else
		   RW_0;
		SCLK_1;
		SCLK_0;
		data <<= 1;
	}
 }
 
 /************写指令函数*************/
 void lcd_write_com(uchar com)
 {
    uchar temp, high, low;
	 
	temp = 0xf8;      //串口通信起始地址
	high = com & 0xf0;
	low  = (com<<4) & 0xf0;
	lcd_send_byte(temp);
	 //delay_ms(1);
	lcd_send_byte(high);
	//delay_ms(1);
 	lcd_send_byte(low);
	//delay_ms(1);
 }
 
 /************写数据函数************/
 void lcd_write_data(uchar data)
 {
	uchar temp,high,low;
	temp = 0xfa;             //写数据
    high = data&0xf0;        //取高4位
    low  = (data<<4)&0xf0;   //取低4位
	lcd_send_byte(temp);
	//delay_ms(1);
	lcd_send_byte(high);
	//delay_ms(1);
	lcd_send_byte(low);
	//delay_ms(1);
 } 
 
 /**********LCD初始化函数***********/
 void lcd_init(void)
 {		
	PSB_0;
	RES_0;
	delay_ms(5);
	RES_1;
	delay_ms(5);
	lcd_write_com(0x34);
	delay_ms(7);
	lcd_write_com(0x30);
	delay_ms(7);
	lcd_write_com(0x0c);
	delay_ms(7);
	lcd_write_com(0x01);
	delay_ms(7);
 }
 
 /**********lcd清屏函数***********/
 void lcd_clr(void)
 {
     lcd_write_com(0x01);
	 delay_ms(3);
 }
 
 void lcd_write_char(uchar *c)
 {
 	while((*c)!='0')
	{
		lcd_write_com(c);
		c++;
	}
 }