                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textColor="#FFF"
                            android:text="从机编号" />

                        <TextView
                            android:id="@+id/working_condition"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textColor="#FFF"
                            android:text="工作状态" />
                    </TableRow>
                </TableLayout>

